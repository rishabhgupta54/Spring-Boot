<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mySQLDatabase" class="in.rishabh_gupta.MySQLDatabase"/>
    <bean id="postgreSQL" class="in.rishabh_gupta.PostgreSQL"/>

    <bean id="userWithMySQLDatabaseConnection" class="in.rishabh_gupta.User">
        <constructor-arg ref="mySQLDatabase"/>
    </bean>

    <bean id="userWithPostgreSQLDatabaseConnection" class="in.rishabh_gupta.User">
        <constructor-arg ref="postgreSQL"/>
    </bean>
</beans>
