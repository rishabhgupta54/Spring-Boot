<?xml version="1.0" encoding="UTF-8"?>
<!--
    CONCEPT: Autowire by Name
    Spring automatically injects a bean whose ID matches
    the property name in the dependent class.
-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Independent bean providing car details -->
    <bean id="specification" class="in.rishabh_gupta.Specification">
        <property name="make" value="Kia"/>
        <property name="model" value="Seltos"/>
    </bean>

    <!-- Dependent bean that auto-wires by matching property name -->
    <bean id="car" class="in.rishabh_gupta.Car" autowire="byName"/>
</beans>
